<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-md-6 offset-md-3">
        <!-- <div class="card-shadow"> -->
            <div class="card-body">
        <form action="/campgrounds" method="Post" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="campground[title]" required>
                <div class="valid-feedback">
                    Looks nice!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="campground[location]" required>
                <div class="valid-feedback">
                    Looks nice!
                </div>
            </div>
            <!-- <input type="file" name="image" id="" multiple> -->
            <!-- <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" id="image" name="campground[image]" required>
                <div class="valid-feedback">
                    Looks nice!
                </div>
            </div> -->
            <div class="mb-3">
            <label class="form-label" for="price">Campground Price</label>
            <div class="input-group">
                <span class="input-group-text" id="price-label">$</span>
                <input type="text" class="form-control" id= "price" placeholder="0.00" name="campground[price]" required aria-label="Price" aria-describedby="price-label">
                <div class="valid-feedback">
                    Looks nice!
                </div>
            </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="campground[description]" required></textarea>
                <div class="valid-feedback">
                    Looks nice!
                </div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Upload Images</label>
                <input class="form-control" type="file" id="image" multiple name="image">
            </div>
            <div class="mb-3">
            <button class="btn btn-success">Add new Camp!</button>
            </div>
            </form>
        
            <a href="/campgrounds">Back to Index</a>
    </div>
<!-- </div> -->
</div>
</div>

